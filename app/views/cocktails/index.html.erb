<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'banner.jpg' %>);">
  <div class="container">
    <h1>Cocktailawesome</h1>

    <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-outline-light m-3" %>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-6 col-sm-2 d-flex flex-wrap justify-content-center p-3 m-3">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.photo %>)">
             <h2> <%= cocktail.name %> </h2>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
