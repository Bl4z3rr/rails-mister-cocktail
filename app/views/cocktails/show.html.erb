<h1>Cocktail - <%= @cocktail.name %></h1>
<br>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to 'Destroy', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
<% end %>
<%= render 'doses/new', cocktail: @cocktails, dose: @dose  %>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>



<br>
<%= link_to "Back to list", cocktails_path %>
